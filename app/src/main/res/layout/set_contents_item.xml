<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageSet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimaryBlack"
        android:minHeight="200dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shadow_bottom"
        android:minHeight="150dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/releaseSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp"
            android:text="@string/date_item"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/titleSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/releaseSet"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp"
            android:text="@string/title_item"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/countMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleSet"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp"
            android:text="@string/genere_item"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</FrameLayout>